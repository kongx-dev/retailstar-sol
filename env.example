# Retailrunner Configuration
# Copy this file to .env and fill in your values

# Solana Network (mainnet-beta, devnet, testnet)
SOLANA_NETWORK=mainnet-beta

# RPC Endpoint
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet Configuration
# Generate a new keypair for automation: solana-keygen new --outfile retailrunner-keypair.json
WALLET_KEYPAIR_PATH=./retailrunner-keypair.json

# Optional: Webhook for announcements
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Twitter API (for announcements)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Logging
LOG_LEVEL=info
ENABLE_ANNOUNCEMENTS=true 