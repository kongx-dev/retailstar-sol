{
  "name": "retailrunner",
  "version": "1.0.0",
  "description": "Retailstar Mall SNS metadata automation system",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "bot": "node retailrunner-bot/index.js",
    "build": "npm run generate-sitemap && vite build",
    "preview": "vite preview",
    "generate-sitemap": "node scripts/generate-sitemap.cjs",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "docker:build": "docker build -t retailstar .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production retailstar",
    "docker:compose": "docker-compose up --build",
    "docker:compose:prod": "docker-compose --profile production up --build",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@bonfida/spl-name-service": "^3.0.12",
    "@crossmint/wallets-sdk": "^0.10.16",
    "@solana/spl-token": "^0.3.9",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.87.6",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/supabase-js": "^2.52.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.525.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.8.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^7.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "globals": "^16.3.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript-eslint": "^8.37.0",
    "vite": "^4.3.9"
  },
  "keywords": [
    "solana",
    "sns",
    "automation",
    "retailstar",
    "web3"
  ],
  "author": "Retailstar Mall",
  "license": "MIT"
}
